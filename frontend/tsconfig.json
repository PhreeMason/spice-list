{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/__tests__/*.js",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "tailwind.config.js",
    ]
}